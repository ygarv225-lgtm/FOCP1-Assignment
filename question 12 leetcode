int given_conditions(char ch){
 // function ussed to give conditions 
 switch(ch){
    case 'I': return 1;
   case 'V': return 5;
    case 'X': return 10;
   case 'L': return 50;
    case 'C': return 100;
    case 'D': return 500;
    case 'M': return 1000;
   default: return 0;
    }
}
int romanToInt(char* s) { // callling the function when its the time to make changes
int sum=0;
for(int i=0;s[i]>0;i++){ // avoding the null from the array of the numbers
int n1=given_conditions(s[i]); // call of the function
int n2=given_conditions(s[i+1]); // call of the function
// making the brink elements to the normal 
if(n1<n2) // IX
sum=sum-n1;
else 
sum=sum+n1;
}
return sum;
}
