/**
 * Return an array of arrays of size *returnSize.
 * The sizes of the arrays are returned as *returnColumnSizes array.
 * Note: Both returned array and *columnSizes array must be malloced, assume caller calls free().
 */
int** transpose(int** matrix, int matrixSize, int* matrixColSize, int* returnSize, int** returnColumnSizes) {
    int a=matrixSize; // rows
    int b=matrixColSize[0]; // columns
    *returnSize=b;
    // need for menory allocation for coilum
    *returnColumnSizes=(int*)calloc(b,sizeof(int));
    // need for memory allocation for result 
    int **result=(int **)calloc(b,sizeof(int*));
    for(int i=0;i<b;i++){
        (*returnColumnSizes)[i]=a;
        result[i]=(int*)calloc(a,sizeof(int));
    }
    for (int i = 0; i < a; i++) {
        for (int j = 0; j < b; j++) {
            result[j][i] = matrix[i][j];
        }
    }
    return result;
}
